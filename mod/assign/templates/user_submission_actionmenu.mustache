{{!
    @template mod_assign/user_submission_actionmenu

    Actions panel at the bottom of the assignment grading UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Context variables required for this template:
    * see mod/assign/classes/output/user_submission_actionmenu.php

}}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            {{#submit}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
                {{#help}}
                    {{>core/help_icon}}
                {{/help}}
            {{/submit}}
        </div>
        <div class="col-xs-6">
            {{#previoussubmission}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
                {{#help}}
                    {{>core/help_icon}}
                {{/help}}
            {{/previoussubmission}}
        </div>
        <div class="col-xs-6">
            {{#edit}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
                {{#help}}
                    {{>core/help_icon}}
                {{/help}}
            {{/edit}}
        </div>
        <div class="col-xs-6">
            {{#remove}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            {{/remove}}
        </div>
    </div>
</div>
