<div id="fitem_{{id}}" class="fitem fitem_textarea {{#required}}required{{/required}} {{#advanced}}advanced{{/advanced}}">
    <div class="fitemtitle">
        <label {{#hiddenLabel}}class="accesshide"{{/hiddenLabel}} for="{{id}}">
            {{label}}
            {{#required}}{{>core/form-required}}{{/required}}
            {{#advanced}}{{>core/form-advanced}}{{/advanced}}
        </label>
        {{{helpButton}}}
    </div>
    <div class="felement ftextarea {{#error}}error{{/error}}">
        {{#error}}
        <span class="error" tabindex="0">{{{error}}}</span>
        <br/>
        {{/error}}
        <textarea name="{{name}}" id="{{id}}" {{#required}}required{{/required}} {{#size}}size="{{size}}"{{/size}}>
        {{text}}
        </textarea>
    </div>
</div>